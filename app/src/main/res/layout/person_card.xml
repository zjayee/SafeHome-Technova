<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginVertical="3dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cover_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/cover1"
            android:scaleType="centerCrop"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/pfp_card"
            android:layout_width="95dp"
            android:layout_height="95dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            >

            <ImageView
                android:id="@+id/pfp_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jessicadiaz"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/white_background"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/home_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/pfp_card"
            app:layout_constraintTop_toTopOf="@id/white_background"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="Jessica Diaz's Home"
            android:textColor="@color/main_pink"
            android:fontFamily="@font/lexend"
            android:textStyle="bold"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/distance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_name_textview"
            app:layout_constraintLeft_toLeftOf="@id/home_name_textview"
            android:layout_marginTop="4dp"
            android:text="2.5Km away"
            android:textColor="@color/main_pink"
            android:fontFamily="@font/lexend"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/duration_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/distance_textview"
            app:layout_constraintLeft_toLeftOf="@id/home_name_textview"
            android:layout_marginTop="4dp"
            android:text="One week duration"
            android:textColor="@color/main_pink"
            android:fontFamily="@font/lexend"
            android:textSize="10sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
